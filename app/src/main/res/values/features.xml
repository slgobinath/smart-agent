<?xml version="1.0" encoding="utf-8"?>
<resources>
    <array name="feature_names">
        <item>Internet</item>
        <item>Location</item>
        <item>Nearby Terminals</item>
        <item>Push notification</item>
    </array>
    <array name="feature_descriptions">
        <item>Internet is required to send the sensor data to the server</item>
        <item>Smart Agent tracks your location</item>
        <item>If nearby devices are available, the data may be shared with them</item>
        <item>Smart Agent may receive push notifications from the server</item>
    </array>
    <array name="feature_icons">
        <item>@drawable/ic_feature_internet</item>
        <item>@drawable/ic_feature_location</item>
        <item>@drawable/ic_feature_near_by_terminals</item>
        <item>@drawable/ic_feature_notification</item>
    </array>
    <array name="feature_permissions">
        <item>android.permission.ACCESS_NETWORK_STATE,android.permission.INTERNET</item>
        <item>android.permission.ACCESS_COARSE_LOCATION,android.permission.ACCESS_FINE_LOCATION</item>
        <item>
            android.permission.ACCESS_WIFI_STATE,android.permission.CHANGE_WIFI_STATE,android.permission.BLUETOOTH,android.permission.BLUETOOTH_ADMIN
        </item>
        <item>com.google.android.c2dm.permission.RECEIVE</item>
    </array>
</resources>
